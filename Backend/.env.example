# Environment
NODE_ENV=development

# Server
PORT=3000
FRONTEND_URL=https://fitthreads.com

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/fitthreads?sslmode=require

# Redis (Upstash)
REDIS_URL=https://your-redis-instance.upstash.io
REDIS_TOKEN=your-redis-token

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES_IN=30days in seconds

# Magic Link Authentication
MAGIC_LINK_SECRET=your-magic-link-secret-change-this-in-production
MAGIC_LINK_EXPIRES_IN=900

# Rate Limiting
RATE_LIMIT_POSTS_PER_HOUR=6
RATE_LIMIT_LIKES_PER_MINUTE=100

# Email Service (for magic links - configure when implementing)
# EMAIL_FROM=noreply@fitthreads.com
# EMAIL_SERVICE_API_KEY=your-email-service-api-key
