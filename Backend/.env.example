# Environment
NODE_ENV=development

# Server
PORT=3000
HASH_SECRET=your-hash-secret-change-this-in-production

# Frontend URLs
FRONTEND_URL=https://fitthreads.com
FRONTEND_DEV_URL=http://localhost:5173

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/fitthreads?sslmode=require

# Redis (Upstash)
REDIS_URL=https://your-redis-instance.upstash.io
REDIS_TOKEN=your-redis-token

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=fitthreads-api
JWT_ACCESS_TOKEN_EXPIRES_IN=3600
JWT_REFRESH_TOKEN_EXPIRES_IN=2592000

# Magic Link Authentication
MAGIC_LINK_EXPIRES_IN=600

# OTP
OTP_EXPIRY_SECONDS=600

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=FitThreads <noreply@fitthreads.com>

# Note: Rate limits are hardcoded in src/configs/env.ts
# They are security policies, not environment configuration
